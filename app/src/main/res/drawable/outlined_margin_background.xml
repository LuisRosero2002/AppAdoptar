<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Margen de color negro -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Color de fondo negro -->
        </shape>
    </item>
    <!-- Fondo con borde blanco -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
            <corners android:radius="8dp" /> <!-- Radio de las esquinas -->
            <stroke android:color="#000000" android:width="1dp" /> <!-- Borde negro y delgado -->
        </shape>
    </item>
</layer-list>